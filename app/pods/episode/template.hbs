<h2>Episodes</h2>
 <div class="container">
    <form class="d-flex m-2" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    {{#each this.model.results as |episode|}}
    <div class="card mb-2 p-2">
      <div class="body">
        <h5 class="card-title">{{episode.name}}</h5> 
        <p class="card-text">episode: {{episode.episode}}</p>
        <p class="card-text">Date: {{episode.air_date}}</p>
      </div>
    </div>
    {{else}}
      <p>Nada para ver aqui :/</p>
    {{/each}}
  </div>
<div class="buttons">
  <button type="button" class="btn btn-outline-secondary m-2" id="back">back</button>
  <button type="button" class="btn btn-outline-secondary m-2" id="next">next</button>
</div>