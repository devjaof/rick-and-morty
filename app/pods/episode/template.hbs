<h2>Episodes</h2>
<div class="buttons">
  <button class="btn" id="back">back</button>
  <button class="btn" id="next">next</button>
</div>

  <div class="grid-container">
  {{#each this.model.results as |episode|}}
    <div class="grid-item">
      <span>
        <p class="title">Name:</p> 
        <p class="descrition">{{episode.name}}</p>
      </span>

      <span>
        <p class="title">Episode:</p>
        <p class="descrition">{{episode.episode}}</p>
      </span>

      <span>
        <p class="title">Date:</p>
        <p class="descrition">{{episode.air_date}}</p>
      </span>
      {{!-- <span>
        <a href="{{location.url}}">aaaaaa</a>
      </span> --}}
    </div>
  
    {{else}}
      <p>Nada para ver aqui :/</p>
    {{/each}}
  </div>
<div class="buttons">
  <button class="btn">back</button>
  <button class="btn">next</button>
</div>

